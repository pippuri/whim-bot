{
  "name": "routes-query",
  "runtime": "nodejs4.3",
  "description": "Query for routes from a implemented provider",
  "customName": false,
  "customRole": false,
  "handler": "handler.handler",
  "timeout": 30,
  "memorySize": 1024,
  "authorizer": {},
  "custom": {
    "excludePatterns": [],
    "cors": {
      "allowOrigin": "*",
      "allowHeaders": [
        "Content-Type",
        "X-Amz-Date",
        "Authorization",
        "X-Api-Key"
      ]
    }
  },
  "endpoints": [
    {
      "path": "routes",
      "method": "GET",
      "type": "AWS",
      "authorizationType": "CUSTOM",
      "authorizerFunction": "auth-custom-authorizer",
      "apiKeyRequired": false,
      "requestParameters": {
        "integration.request.querystring.from": "method.request.querystring.from",
        "integration.request.querystring.to": "method.request.querystring.to",
        "integration.request.querystring.leaveAt": "method.request.querystring.leaveAt",
        "integration.request.querystring.arriveBy": "method.request.querystring.arriveBy"
      },
      "requestTemplates": {
        "application/json": {
          "identityId": "$context.authorizer.principalId",
          "headers": {},
          "payload": {
            "from": "$input.params('from')",
            "to": "$input.params('to')",
            "leaveAt": "$input.params('leaveAt')",
            "arriveBy": "$input.params('arriveBy')",
            "modes": "$input.params('modes')"
          }
        }
      },
      "responses": {
        "^400.*": {
          "statusCode": "400",
          "responseParameters": {
            "method.response.header.Access-Control-Allow-Origin": "'*'"
          }
        },
        "^403.*": {
          "statusCode": "403",
          "responseParameters": {
            "method.response.header.Access-Control-Allow-Origin": "'*'"
          }
        },
        "^\\d{3}.*": {
          "statusCode": "500",
          "responseParameters": {
            "method.response.header.Access-Control-Allow-Origin": "'*'"
          }
        },
        "default": {
          "statusCode": "200",
          "responseParameters": {
            "method.response.header.Access-Control-Allow-Origin": "'*'"
          },
          "responseModels": {},
          "responseTemplates": {
            "application/json": ""
          }
        }
      },
      "swaggerExport": {
        "summary": "Query for a route",
        "description": "Query for routes from an implemented 3rd party routes API",
        "security": [
          {
            "Bearer": []
          }
        ],
        "parameters": [
          {
            "name": "from",
            "type": "string",
            "in": "query",
            "description": "Geolocation of the 'from' location",
            "required": true
          },
          {
            "name": "to",
            "type": "string",
            "in": "query",
            "description": "Geolocation of the 'to' location",
            "required": true
          },
          {
            "name": "leaveAt",
            "type": "integer",
            "in": "query",
            "description": "Leave at query time - provide either this or arriveBy",
            "required": false
          },
          {
            "name": "arriveBy",
            "type": "integer",
            "in": "query",
            "description": "Arrive by query time, provide this",
            "required": false
          },
          {
            "name": "modes",
            "in": "query",
            "description": "Modes that you want to query for",
            "required": false,
            "enum": ["CAR", "TAXI", "WALK", "BICYClE", "PUBLIC_TRANSIT"]
          }
        ],
        "responses": {
          "200": {
            "application/json": {},
            "description": "Success",
            "schema": {
              "$ref": "maas-backend/routes/routes-query/response.json"
            }
          },
          "400": {
            "description": "Invalid input"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    }
  ],
  "events": [],
  "environment": "$${environment}",
  "vpc": {
    "securityGroupIds": [],
    "subnetIds": []
  }
}
