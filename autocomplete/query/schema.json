{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://api.dev.maas.global/v1/autocomplete/query",
  "description": "Lambda input schema for autocomplete.",
  "type": "object",
  "properties": {
    "name": { "type": "string", "minLength": 5, "maxLength": 128 },
    "count": { "type": "integer", "minimum": 1, "maximum": 100, "default": 5 },
    "lat": { "type": "number", "minimum": -90, "maximum": 90 },
    "lon": { "type": "number", "minimum": -180, "maximum": 180 },
    "radius": { "type": "number", "minimum": 0, "maximum": 20015 }
  },
  "inject": {
    "hint": "none"
  },
  "dependencies": {
    "lat": {
      "properties": {
        "lon": {}
      },
      "inject": {
        "hint": "latlon",
        "radius": 50
      },
      "required": [ "lat", "lon" ]
    },
    "lon": {
      "properties": {
        "lat": {},
        "hint": { "constant": "latlon" }
      },
      "inject": {
        "radius": 50
      },
      "required": [ "lat", "lon" ]
    }
  }
}