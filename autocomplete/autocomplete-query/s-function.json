{
  "name": "autocomplete-query",
  "runtime": "nodejs4.3",
  "description": "Autocomplete locations search queries",
  "customName": false,
  "customRole": false,
  "handler": "handler.handler",
  "timeout": 20,
  "memorySize": 1024,
  "authorizer": {},
  "custom": {},
  "endpoints": [
    {
      "path": "autocomplete",
      "method": "GET",
      "type": "AWS",
      "authorizationType": "none",
      "authorizerFunction": false,
      "apiKeyRequired": true,
      "requestParameters": {
        "integration.request.querystring.name": "method.request.querystring.name",
        "integration.request.querystring.count": "method.request.querystring.count",
        "integration.request.querystring.lat": "method.request.querystring.lat",
        "integration.request.querystring.lon": "method.request.querystring.lon"
      },
      "requestTemplates": {
        "application/json": {
          "identityId": "",
          "headers": {},
          "payload": {
            "name": "$input.params('name')",
            "count": "$input.params('count')",
            "lat": "$input.params('lat')",
            "lon": "$input.params('lon')"
          }
        }
      },
      "responses": {
        "^400.*": {
          "statusCode": "400"
        },
        "^403.*": {
          "statusCode": "403"
        },
        "^404.*": {
          "statusCode": "404"
        },
        "^\\d{3}.*": {
          "statusCode": "500"
        },
        "default": {
          "statusCode": "200",
          "responseModels": {},
          "responseTemplates": {
            "application/json": ""
          }
        }
      },
      "swaggerExport": {
        "summary": "Query for autocomplete",
        "description": "Get autocomplete information based on name, count and geolocation",
        "security": [
          {
            "Bearer": []
          }
        ],
        "parameters": [
          {
            "name": "name",
            "in": "query",
            "description": "Full / partial name of the location",
            "required": true,
            "type": "string"
          },
          {
            "name": "count",
            "in": "query",
            "description": "Number of item to retrieve",
            "required": true,
            "type": "string"
          },
          {
            "name": "lat",
            "in": "query",
            "description": "Location's latitude",
            "required": true,
            "type": "string"
          },
          {
            "name": "lon",
            "in": "query",
            "description": "Location's longitude",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "application/json": {},
            "description": "Success",
            "schema": {
              "$ref": "maas-backend/autocomplete/autocomplete-query/response.json"
            }
          },
          "400": {
            "description": "Invalid input"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  ],
  "events": [],
  "environment": "$${environment}",
  "vpc": {
    "securityGroupIds": [],
    "subnetIds": []
  }
}
