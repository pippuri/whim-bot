{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://api.maas.global/v1/autocomplete/request-schema.json",
  "description": "Request schema for autocomplete",
  "type": "object",
  "anyOf": [
    {
      "$ref": "v1/units.json#/definitions/location"
    }
  ],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 5,
      "maxLength": 128
    },
    "count": {
      "type": "integer",
      "minimum": 1,
      "maximum": 100,
      "default": 5
    },
    "radius": { "type": "number", "minimum": 0, "maximum": 20015 }
  },
  "inject": {
    "hint": "none"
  },
  "dependencies": {
    "lat": {
      "properties": {
        "lon": {}
      },
      "inject": {
        "hint": "latlon",
        "radius": 50
      },
      "required": [ "lat", "lon" ]
    },
    "lon": {
      "properties": {
        "lat": {},
        "hint": { "constant": "latlon" }
      },
      "inject": {
        "radius": 50
      },
      "required": [ "lat", "lon" ]
    }
  }
}